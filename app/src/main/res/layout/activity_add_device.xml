<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDevice">

    <TextView
        android:id="@+id/addDeviceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Device"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="80dp" />

    <Button
        android:id="@+id/addTvButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        android:text="Television"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="254dp" />

    <Button
        android:id="@+id/addLightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Light"
        app:layout_constraintStart_toStartOf="@+id/addTvButton"
        app:layout_constraintTop_toBottomOf="@+id/addTvButton" />

    <Button
        android:id="@+id/addThermButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Thermostat"
        app:layout_constraintStart_toStartOf="@+id/addLightButton"
        app:layout_constraintTop_toBottomOf="@+id/addLightButton" />

    <Button
        android:id="@+id/addFanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Ceiling Fan"
        app:layout_constraintStart_toStartOf="@+id/addLightButton"
        app:layout_constraintTop_toBottomOf="@+id/addThermButton" />

</androidx.constraintlayout.widget.ConstraintLayout>